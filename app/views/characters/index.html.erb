<%- model_class = Character.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:int) %></th>
      <th><%= model_class.human_attribute_name(:str) %></th>
      <th><%= model_class.human_attribute_name(:wis) %></th>
      <th><%= model_class.human_attribute_name(:con) %></th>
      <th><%= model_class.human_attribute_name(:chr) %></th>
      <th><%= model_class.human_attribute_name(:dex) %></th>
      <th><%= model_class.human_attribute_name(:hp) %></th>
      <th><%= model_class.human_attribute_name(:ac) %></th>
      <th><%= model_class.human_attribute_name(:bab) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= link_to character.id, character_path(character) %></td>
        <td><%= character.name %></td>
        <td><%= character.int %></td>
        <td><%= character.str %></td>
        <td><%= character.wis %></td>
        <td><%= character.con %></td>
        <td><%= character.chr %></td>
        <td><%= character.dex %></td>
        <td><%= character.hp %></td>
        <td><%= character.ac %></td>
        <td><%= character.bab %></td>        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_character_path(character), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      character_path(character),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_character_path,
            :class => 'btn btn-primary' %>
