<%- model_class = @gear.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @gear.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slot) %>:</strong></dt>
  <dd><%= @gear.slot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= link_to @gear.owner, character_path(@gear.character_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equipped) %>:</strong></dt>
  <dd><%= @gear.equipped %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stats) %>:</strong></dt>
  <dd><%= @gear.stats.join(", ") %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gears_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gear_path(@gear), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gear_path(@gear),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
