<%= form_for @gear, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :slot, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :slot, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :equipped, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :equipped, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :character_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :character_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                gears_path, :class => 'btn' %>
  </div>
<% end %>
